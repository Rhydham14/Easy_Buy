<!-- verify-email.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify Email</title>
  <style>
    .button-link {
      display: inline-block;
      padding: 10px 20px;
      background-color: purple;
      color: white;
      text-decoration: none;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      transition: background-color 0.3s ease;
    }
    .button-link:hover {
      background-color: #6b1c8e;
    }
  </style>
</head>
<body>
  <h1>Verify your email</h1>
  <p>Click this link to verify your email: <a href="<%= url %>" class="button-link">Verify</a></p>
</body>
</html>
